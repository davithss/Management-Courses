<%= form_for [:admin, @course] do |f| %>
  <%= error_messages_for @course %>
  
 <div id="body">
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :begin_date %><br />
    <%= f.date_select :begin_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body , :placeholder => "Body", :rows => 30, :cols => 70  %>
  </div>
  <div class="actions">
    <%= f.submit :class => "button" %> or <%= link_to "cancel", admin_courses_path %>
  </div>
</div>
<% end %>
